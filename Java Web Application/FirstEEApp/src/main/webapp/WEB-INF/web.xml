<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>com.ionescu.radu.firsteeapp.controller.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SQLServlet</servlet-name>
        <servlet-class>com.ionescu.radu.firsteeapp.controller.SQLServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SQLServlet</servlet-name>
        <url-pattern>/sql</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ionescu.radu.firsteeapp.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ionescu.radu.firsteeapp.controller.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InvoiceUploadServlet</servlet-name>
        <servlet-class>com.ionescu.radu.firsteeapp.controller.InvoiceUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InvoiceUploadServlet</servlet-name>
        <url-pattern>/invoice_upload</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>NirServlet</servlet-name>
        <servlet-class>com.ionescu.radu.firsteeapp.controller.NirServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>NirServlet</servlet-name>
        <url-pattern>/nir</url-pattern>
    </servlet-mapping>

</web-app>